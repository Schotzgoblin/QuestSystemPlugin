<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration 5.6//EN" "http://www.hibernate.org/xsd/hibernate-configuration-5.6.xsd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.community.dialect.SQLiteDialect</property>
        <property name="hibernate.connection.driver_class">org.sqlite.JDBC</property>
        <property name="hibernate.connection.url">jdbc:sqlite:plugins/YourPluginName/quests.db</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <mapping class="com.schotzgoblin.main.Quest"/> <mapping class="com.schotzgoblin.main.PlayerQuest"/>
    </session-factory>
</hibernate-configuration>